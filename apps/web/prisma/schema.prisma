generator client {
  provider = "prisma-client"
  output   = "../src/generated/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique

  // Synced from Clerk
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clerkId])
  @@index([email])
}
