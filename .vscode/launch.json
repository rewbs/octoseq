{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web: Next.js (dev) - server",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm --filter web dev",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Web: Chrome (attach to Next dev)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/web",
      "userDataDir": "${workspaceFolder}/.vscode/.chrome"
    }
  ],
  "compounds": [
    {
      "name": "Web: Debug Next.js",
      "configurations": ["Web: Next.js (dev) - server", "Web: Chrome (attach to Next dev)"]
    }
  ]
}
